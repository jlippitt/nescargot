{
  "name": "nescargot",
  "version": "0.1.0",
  "repository": "git@github.com:jlippitt/nescargot",
  "author": "James Lippitt <james.lippitt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "build:headless": "yarn tsc",
    "format": "prettier --write './src/**/*'",
    "lint": "tslint './src/**/*'",
    "test": "./node_modules/.bin/jest",
    "start:headless": "NODE_PATH=./dist node ./dist/index.js"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.121",
    "@types/node": "^11.9.5",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.16.4",
    "string-replace-loader": "^2.1.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.1.2",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "log-buffer": "^0.0.3",
    "snek-client": "git+ssh://git@github.com:jlippitt/snek-client"
  }
}
