{
  "name": "nescargot",
  "version": "0.1.0",
  "repository": "git@github.com:jlippitt/nescargot",
  "author": "James Lippitt <james.lippitt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "build:headless": "yarn tsc",
    "format": "prettier --write './src/**/*'",
    "lint": "tslint './src/**/*'",
    "start": "http-server ./public",
    "start:headless": "NODE_PATH=./dist node ./dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.121",
    "@types/node": "^11.9.5",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "ts-loader": "^5.3.3",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "http-server": "^0.11.1",
    "lodash": "^4.17.11"
  }
}
